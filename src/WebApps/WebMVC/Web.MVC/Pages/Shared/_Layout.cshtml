@using SooduskorvWebMVC
@using Web.Pages.Common.Const
@using Microsoft.AspNetCore.Authorization
@inject IStringLocalizer<Program> Localizer;
@inject IAuthorizationService AuthorizationService;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestEnvironment</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="images/logo.png" alt="Logo" style="width: 100px; padding-left: 10px; float: left; left:0px;">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TestEnvironment</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @Html.DropMenu($"{Localizer["Catalog"]}",
                            new Link(
                                $"{ProductPagesNames.ProductTypes}",
                                $"{ProductPagesUrls.ProductTypes}"))
                        @Html.DropMenu($"{Localizer["Help"]}",
                            new Link("About", new Uri("/Index", UriKind.Relative)),
                            new Link("Privacy", new Uri("/Privacy", UriKind.Relative)))
                        @Html.DropMenu($"{Localizer["Basket"]}",
                             new Link("About", new Uri("/Index", UriKind.Relative)),
                             new Link("Privacy", new Uri("/Privacy", UriKind.Relative)))
                        @if ((await AuthorizationService.AuthorizeAsync(User, "ForOrder")).Succeeded)
                        {
                            @Html.DropMenu($"{Localizer["Order"]}",
                                new Link("My Orders", new Uri("/Index", UriKind.Relative)),
                                new Link("Buy again", new Uri("/Privacy", UriKind.Relative)))
                        }
                    </ul>
                </div>
                <vc:culture-switcher />
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                @*TODO log out the logged in user*@
            }
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - TestEnvironment - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    @*TODO not working here*@
    <script src="~/_framework/blazor.server.js"></script>
    <script src="~/_framework/blazor.webassembly.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>