@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMVC</title>
    <base href="/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel=" stylesheet" href`="~/css/components/header.css" />
    <link rel=" stylesheet" href`="~/css/custom/_layout.css" />

</head>
<body style="background: url(https://sun9-21.userapi.com/qrGDI9AQvznoM2vWMuxqKLJ5lcOsuhS7iSHJVQ/BCvg66-ARco.jpg); background-size: 100% 100%;">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arimo, Helvetica, sans-serif;
        }

        /* Style the header */
        header {
            background-color: rgba(255, 255, 255, 0.71);
            padding-top: 7px;
            padding-bottom: 7px;
            padding: 3px;
            text-align: left;
            font-size: 18px;
            color: black;
            background-size: 20px;
        }
        .top_header{
            text-align: center;
            font-size: 15px;
            color: black;
            padding-bottom: 0px;
        }


        /* Clear floats after the columns */
        section:after {
            content: "";
            display: table;
            clear: both;
        }

        /* Style the footer */
        footer {
            background-color: linear-gradient(to right, rgb(35, 177, 221) 0%, rgb(35, 177, 221) 100%;
            padding: 10px;
            text-align: center;
            position: fixed;
            padding-top:0;
            color: white;
        }

        .left {
            grid-area: left;
            background-color: linear-gradient(to right, rgb(35, 177, 221) 0%, rgb(35, 177, 221) 100%;
            text-align: center;
        }
        .container_box {
            position: fixed;
            top: 0;
            right: 0px;
            /*box-shadow: inherit;*/
        }

    </style>
    <header class="header" id="header">
        <div class="top_header">
            <div class="container">
                <div class="welcome-msg hidden-xs hidden-sm"><p>Eesti jaekettide hinnavõrdlus portaal!</p></div>
            </div>

        </div>
        <nav class="container_box navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">

            
                <div class="container">

                    <img src="~/css/images/logo.png" alt="Logo" style="width:150px; padding-left: 10px; float: left;">

                    <a class="navbar-brand" style="text-align: right; color: #00ccff; text-shadow: 2px 2px 4px #000000;font-size: 40px" asp-area="" asp-controller="Home" asp-action="Index">Sooduskorv </a>
                    <p style="font-size: 20px; color: dimgray;">Osta soodsalt, osta Sooduskorviga!</p>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>


          

        </nav>
      
         <div class="navbar navbar-expand-sm" >
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" style="color: green" asp-controller="Home" asp-action="Index">Avaleht</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    @if ((await AuthorizationService.AuthorizeAsync(User, "AllowToOrderProductPolicy")).Succeeded)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="OrderProduct">Order</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Product">All items</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>
         </div>
        
    </header>
    <div class="left">
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <footer class="border-top footer text-muted">
        &copy; @DateTime.Now.Year - WebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>