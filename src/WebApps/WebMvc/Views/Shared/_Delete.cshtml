@page "{id}"
@model Sooduskorv-MVC.Pages.Dealers.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewData["ShowButtons"] = false;
}

<h1 class="text-center">Delete Confirmation</h1>

<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-mg-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <partial name="_DisplayDealerPartial" model="Model.Dealer" view-data="ViewData"/>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-mg-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4>Dealer ID: <span class="text-primary">@Model.Dealer.Id</span></h4><hr />
                <h4>Zodiac sign: <span class="text-primary">@Model.Dealer.ZodiacSign</span></h4><hr />
                <h4>Game: <span class="text-primary">@Model.Dealer.Game</span></h4><hr />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h5>Are you sure you want to delete dealer - @Model.Dealer.Name?"</h5>

            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a class="btn btn-success" asp-page="/Dealers/Dealers">No</a>
            </form>
        </div>
    </div>
</div>